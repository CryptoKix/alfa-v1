# TacTix Security Configuration Template
# Copy to .env and fill in your values
# Required fields are marked with [REQUIRED]

# =============================================================================
# API KEYS
# =============================================================================

# [REQUIRED] Helius API key for Solana RPC and WebSocket
HELIUS_API_KEY=your_helius_api_key_here

# [OPTIONAL] Jupiter API key for better rate limits
JUPITER_API_KEY=

# [OPTIONAL] Birdeye API key for OHLCV data
BIRDEYE_API_KEY=

# =============================================================================
# DISCORD NOTIFICATIONS
# =============================================================================

# Webhook for trade notifications
DISCORD_WEBHOOK_URL=

# Webhook for system status alerts
DISCORD_SYSTEM_WEBHOOK_URL=

# =============================================================================
# SECURITY - NETWORK ISOLATION
# =============================================================================

# Host binding - KEEP AS localhost FOR SECURITY
# Only change if you know what you're doing
TACTIX_HOST=127.0.0.1
TACTIX_PORT=5001

# Allowed CORS origins (comma-separated)
# Default allows localhost dev server only
TACTIX_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# SECURITY - AUTHENTICATION
# =============================================================================

# Enable local authentication (recommended: true)
TACTIX_AUTH_ENABLED=true

# Session secret for signing session tokens
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
TACTIX_SESSION_SECRET=

# Session expiry in hours
TACTIX_SESSION_EXPIRY_HOURS=24

# =============================================================================
# SECURITY - KEYSTORE ENCRYPTION
# =============================================================================

# Password for encrypted keystore
# [REQUIRED if using .keystore.enc]
# Set this to unlock your encrypted wallet on startup
TACTIX_KEYSTORE_PASSWORD=

# =============================================================================
# SECURITY - SESSION KEY ENCRYPTION
# =============================================================================

# Secret for encrypting delegated session keys
# [REQUIRED for browser wallet delegation]
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SESSION_KEY_SECRET=

# =============================================================================
# SECURITY - TRADE LIMITS
# =============================================================================

# Maximum single trade size in USD
MAX_SINGLE_TRADE_USD=2500

# Maximum daily trading volume in USD
MAX_DAILY_VOLUME_USD=10000

# Trades above this value require confirmation
REQUIRE_CONFIRM_USD=1000

# Slippage bounds (basis points)
# 10 = 0.1%, 300 = 3%
MIN_SLIPPAGE_BPS=10
MAX_SLIPPAGE_BPS=300

# =============================================================================
# SECURITY - SNIPER LIMITS
# =============================================================================

# Maximum SOL per snipe
SNIPER_MAX_AMOUNT_SOL=0.5

# Maximum slippage percentage for sniper
SNIPER_MAX_SLIPPAGE_PCT=5

# =============================================================================
# SECURITY - RATE LIMITING
# =============================================================================

# Enable rate limiting (recommended: true)
TACTIX_RATE_LIMIT_ENABLED=true

# Limits per minute by category
TACTIX_RATE_LIMIT_TRADE=5
TACTIX_RATE_LIMIT_API=60
TACTIX_RATE_LIMIT_WEBHOOK=100
TACTIX_RATE_LIMIT_AUTH=10

# Trade cooldown between similar trades (seconds)
TRADE_COOLDOWN_SECONDS=5

# =============================================================================
# SECURITY - TOKEN BLOCKLIST
# =============================================================================

# Comma-separated list of blocked token mints
# Add known scam/honeypot tokens here
TOKEN_BLOCKLIST=

# =============================================================================
# SECURITY - AUDIT LOGGING
# =============================================================================

# Enable audit logging (recommended: true)
TACTIX_AUDIT_ENABLED=true

# Audit log directory
TACTIX_AUDIT_LOG_DIR=logs

# Audit log file name
TACTIX_AUDIT_LOG_FILE=audit.log

# Max audit log size before rotation (bytes)
TACTIX_AUDIT_LOG_MAX_BYTES=10485760

# Number of backup audit logs to keep
TACTIX_AUDIT_LOG_BACKUP_COUNT=5
